# SQL-Speak Environment Configuration
# Copy this file to .env and fill in with your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sql_speak

# API Server
API_PORT=8000
API_SECRET_KEY=your-secret-key-change-this
API_DEBUG=False

# GitHub Copilot
GH_TOKEN=your-github-token-here

# Azure (if using Azure services)
AZURE_TENANT_ID=your-tenant-id
AZURE_BACKEND_CLIENT_ID=your-backend-client-id
AZURE_API_AUDIENCE=your-api-audience
AZURE_FRONTEND_CLIENT_ID=your-frontend-client-id

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# SQLite (for local development)
SQLITE_DB_PATH=./hospital.db

# Feature Flags
ENABLE_BENCHMARK_MODE=True
READ_ONLY_MODE=False
